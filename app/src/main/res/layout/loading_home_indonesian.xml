<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/LtvHomeIndonesianCase"
        style="@style/TextSubTitle.Loading"
        android:layout_marginTop="@dimen/spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/LhomeFlag"
        android:layout_width="@dimen/big_flag_size"
        android:layout_height="@dimen/big_flag_size"
        android:layout_marginTop="@dimen/spacing"
        android:background="@color/loading2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LtvHomeIndonesianCase" />

    <View
        android:id="@+id/LimHomeICase"
        android:layout_width="@dimen/emoticon_size"
        android:layout_height="@dimen/emoticon_size"
        android:layout_marginTop="@dimen/spacing"
        android:background="@color/loading2"
        app:layout_constraintEnd_toStartOf="@id/LimHomeIRecovered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LtvHomeICase" />

    <View
        android:id="@+id/LimHomeIRecovered"
        android:layout_width="@dimen/emoticon_size"
        android:layout_height="@dimen/emoticon_size"
        android:layout_marginTop="@dimen/spacing"
        android:background="@color/loading2"
        app:layout_constraintEnd_toStartOf="@id/LimHomeIDeath"
        app:layout_constraintStart_toEndOf="@id/LimHomeICase"
        app:layout_constraintTop_toBottomOf="@id/LtvHomeIRecovered" />

    <View
        android:id="@+id/LimHomeIDeath"
        android:layout_width="@dimen/emoticon_size"
        android:layout_height="@dimen/emoticon_size"
        android:layout_marginTop="@dimen/spacing"
        android:background="@color/loading2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/LimHomeIRecovered"
        app:layout_constraintTop_toBottomOf="@id/LtvHomeIDeath" />

    <View
        android:id="@+id/LtvHomeICase"
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeICase"
        app:layout_constraintStart_toStartOf="@id/LimHomeICase"
        app:layout_constraintTop_toBottomOf="@id/LhomeFlag" />

    <View
        android:id="@+id/LtvHomeIRecovered"
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeIRecovered"
        app:layout_constraintStart_toStartOf="@id/LimHomeIRecovered"
        app:layout_constraintTop_toBottomOf="@id/LhomeFlag" />

    <View
        android:id="@+id/LtvHomeIDeath"
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeIDeath"
        app:layout_constraintStart_toStartOf="@id/LimHomeIDeath"
        app:layout_constraintTop_toBottomOf="@id/LhomeFlag" />

    <TextView
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        android:layout_marginBottom="@dimen/spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeICase"
        app:layout_constraintStart_toStartOf="@id/LimHomeICase"
        app:layout_constraintTop_toBottomOf="@id/LimHomeICase"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        android:layout_marginBottom="@dimen/spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeIRecovered"
        app:layout_constraintStart_toStartOf="@id/LimHomeIRecovered"
        app:layout_constraintTop_toBottomOf="@id/LimHomeIRecovered"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        style="@style/TextNormal.Loading"
        android:layout_marginTop="@dimen/double_spacing"
        android:layout_marginBottom="@dimen/spacing"
        app:layout_constraintEnd_toEndOf="@id/LimHomeIDeath"
        app:layout_constraintStart_toStartOf="@id/LimHomeIDeath"
        app:layout_constraintTop_toBottomOf="@id/LimHomeIDeath"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>