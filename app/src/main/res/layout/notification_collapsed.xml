<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imNotifCollapsed"
        android:layout_width="@dimen/notif_icon_size"
        android:layout_height="@dimen/notif_icon_size"
        android:layout_margin="@dimen/spacing"
        android:src="@drawable/covid"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvNotifName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing"
        android:text="@string/app_name"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_toEndOf="@id/imNotifCollapsed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing"
        android:text="@string/latest_news"
        style="@style/TextAppearance.Compat.Notification.Info"
        android:layout_toEndOf="@id/imNotifCollapsed"
        android:layout_below="@id/tvNotifName"/>

</RelativeLayout>