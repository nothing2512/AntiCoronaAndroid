<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBar</item>
        <item name="bottomSheetDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="Ocean" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryOcean</item>
        <item name="colorPrimaryDark">@color/colorPrimaryOceanDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorPrimaryOcean</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionBar</item>
        <item name="bottomSheetDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="DialogBGStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog</item>
    </style>

    <style name="DialogStyle"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DialogBGStyle</item>
    </style>

    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="TextSubTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/sub_title_text</item>
        <item name="fontPath">fonts/mitr_medium.ttf</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="fontPath">fonts/mitr_light.ttf</item>
    </style>

    <style name="TextHighlight">
        <item name="android:textColor">@color/highlight</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="fontPath">fonts/mitr_light.ttf</item>
    </style>

    <style name="TextNormalSecondary">
        <item name="android:textColor">@color/grey_secondary</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="fontPath">fonts/mitr_light.ttf</item>
    </style>

    <style name="SeekbarRecovered">
        <item name="android:enabled">false</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_recovered</item>
    </style>

    <style name="SeekbarDeath">
        <item name="android:enabled">false</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_death</item>
    </style>

    <style name="SeekbarComparison">
        <item name="android:enabled">false</item>
        <item name="android:thumb">@android:color/transparent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_comparison</item>
    </style>

</resources>
